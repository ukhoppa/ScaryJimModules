

local HorseTab = Window:CreateTab("üêé Wild Horses")
local HorseModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/ukhoppa/ScaryJimModules/refs/heads/main/HorseModule"))()



local horseButtons = {}
HorseModule.OnUpdate(function(data)
    -- clear old buttons
    for _, btn in ipairs(horseButtons) do btn:Destroy() end
    horseButtons = {}

    -- create new buttons
    for _, info in ipairs(data) do
        local btn = HorseTab:CreateButton({
            Name = info.Name,
            Callback = info.Callback
        })
        btn.Button.BackgroundColor3 = info.Color
        table.insert(horseButtons, btn)
    end
end)
