-- Refresh Horse List
------------------------------------------------------------
-- Table to track which horses have already triggered a beep
local beepedHorses = {}

------------------------------------------------------------
-- Refresh Horse List
------------------------------------------------------------
local function refreshHorseList()
    if not HorseListScrollingFrame then return end
    HorseListScrollingFrame:ClearAllChildren()

    local horses = getAllHorses()
    local foundPriority = false

    for _, info in ipairs(horses) do
        local name = info.name or "Unknown Horse"
        local combined = string.lower(name)
        local friendlyness, height = "", ""
        local isHorned = (info.hornStyle ~= "None" and info.hornStyle ~= "")
        local isPriority = false
        local isNatDyed = false

        -- üß† Read data JSON safely
        if info.instance and info.instance:GetAttribute("data") then
            local ok, parsed = pcall(function()
                return HttpService:JSONDecode(info.instance:GetAttribute("data"))
            end)
            if ok and parsed then
                -- Handle Friendlyness
                if parsed.friendliness then
                    friendlyness = math.floor(parsed.friendliness * 100 + 0.5)
                end
                -- Handle Height
                if parsed.height then
                    local hands = math.floor(parsed.height * 10 + 14)
                    local tenth = math.floor(((parsed.height * 10 + 14) % 1) * 10)
                    height = string.format("%.1f", hands + (tenth / 10))
                end
                -- Handle Natural Dye Flag
                if parsed.isNatDyed == true then
                    isNatDyed = true
                    isPriority = true
                end
            end
        end

        -- üîç Keyword-based priority check
        if not isPriority then
            for _, kw in ipairs(priorityKeywords) do
                if string.find(combined, kw) then
                    isPriority = true
                    break
                end
            end
        end

        -- üé® Color selection
        local bgColor
        if isHorned then
            bgColor = Color3.fromRGB(90, 40, 120) -- Purple for horned
        elseif isNatDyed then
            bgColor = Color3.fromRGB(200, 150, 30) -- Gold for nat dyed
        elseif isPriority then
            bgColor = Color3.fromRGB(150, 60, 120) -- Pink for keyword
        else
            bgColor = Color3.fromRGB(60, 50, 40) -- Normal brown
        end

        -- üí¨ Format info text
        local infoText = string.format(
            "Body: (%s %s)  Mane: (%s) Tail: (%s)\nFriendly: %s ‚Ä¢ Height: %s hands",
            info.color or "Unknown",
            info.breed or "",
            info.mane or "Unknown",
            info.tail or "Unknown",
            friendlyness ~= "" and friendlyness or "?",
            height ~= "" and height or "?"
        )

        -- üü¢ Create Button
        local horseButton = HorseListScrollingFrame:CreateButton({
            Name = name,
            Color = bgColor,
            Text = infoText,
            Callback = function()
                if info.instance and info.instance:FindFirstChild("HumanoidRootPart") then
                    local hrp = info.instance:FindFirstChild("HumanoidRootPart")
                    local pos = hrp.Position
                    LocalPlayer.Character:PivotTo(CFrame.new(pos + Vector3.new(0, 3, 0)))
                end
            end
        })

        -- üîä Play sound once per found priority
        if isPriority and not info._alerted then
            foundPriority = true
            info._alerted = true
            task.spawn(function()
                local s = Instance.new("Sound")
                s.SoundId = "rbxassetid://6534947241"
                s.Volume = 2
                s.PlayOnRemove = true
                s.Parent = workspace
                s:Destroy()
            end)
        end
    end
end



------------------------------------------------------------
-- üü£ Update Island Button Highlights
------------------------------------------------------------
task.spawn(function()
	while true do
		local islandsFolder = Workspace:FindFirstChild("Islands")
		if islandsFolder then
			for _, button in ipairs(IslandList:GetChildren()) do
				if button:IsA("TextButton") then
					local island = islandsFolder:FindFirstChild(string.gsub(button.Text, "üåç ", ""))
					if island then
						if islandHasPriorityHorses(island) then
							-- üü£ Highlight for islands with special horses
							button.BackgroundColor3 = Color3.fromRGB(120, 60, 150)
						elseif selectedIsland == island then
							-- üü¢ Selected island
							button.BackgroundColor3 = Color3.fromRGB(100, 130, 100)
						else
							-- Default color
							button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
						end
					end
				end
			end
		end
		task.wait(1)
	end
end)

------------------------------------------------------------
-- Draggable GUI
------------------------------------------------------------
local dragInput, mousePos, framePos
Frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragInput = input
		mousePos = UIS:GetMouseLocation()
		framePos = Frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragInput = nil
			end
		end)
	end
end)

RunService.Heartbeat:Connect(function()
	if dragInput then
		local delta = UIS:GetMouseLocation() - mousePos
		Frame.Position = UDim2.new(framePos.X.Scale, framePos.X.Offset + delta.X, framePos.Y.Scale, framePos.Y.Offset + delta.Y)
	end
end)

------------------------------------------------------------
-- Auto refresh
------------------------------------------------------------
task.spawn(function()
	while true do
		refreshHorseList()
		task.wait(2)
	end
end)

------------------------------------------------------------
-- Initial setup
------------------------------------------------------------
buildIslandList()
GUI.Enabled = true
